@model IEnumerable<DataLayer.Product_Group>
<section class="border-radius category-side">
    <header><h3> دسته بندی ها </h3></header>
    <article>
        <ul class="category-menu">
            @foreach (var group in Model.Where(a => a.ParentId == null))
            {
                <li>
                    <h2><a href="">@group.GroupTitle</a></h2>
                    @if (Model.Any(a => a.ParentId == group.GroupId))
                    {
                        <ul class="child-category-menu">
                            @foreach (var Childgroup in Model.Where(a => a.ParentId == group.GroupId))
                            {
                                <li>
                                    <h2><a href="">@Childgroup.GroupTitle</a> <span>(0)</span></h2>
                                </li>
                            }


                        </ul>
                    }

                </li>
            }


        </ul>
    </article>
</section>
